<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>

<!-- Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="col-md-offfset-3 col-mid-6">
            <h1><%=title %></h1>
            <form class="form" method="post">


                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book's Author"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Year of Publication"
                    name="published" required>
                </div>

                <div class="form-group">
                    <label for="discTextField">Description</label>
                    <textarea type="text" class="form-control"
                    id="discTextField"
                    placeholder="Enter Description of the Book"
                    name="discription" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="number" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Price of thr Book"
                    name="price" required>
                </div>
                 <br>
                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/bookslist" class="btn btn-warning">
                    <i class="fa-solid fa-arrow-rotate-left"></i> Cancel
                </a>
            </form>


        </div>
    </div>
</div>

